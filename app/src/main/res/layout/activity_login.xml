<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="64dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:weightSum="1">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:hint="Username"
        android:layout_below="@+id/textView3"
        android:layout_gravity="center"
        android:layout_weight="0.00"
        android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
        android:inputType="textNoSuggestions"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/etUsername"
        android:layout_gravity="center"
        android:layout_weight="0.00"/>

    <TextView
        android:text="not registered?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/bSignIn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bSignIn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Sign In"
        android:layout_alignBaseline="@+id/tvForget"
        android:layout_alignBottom="@+id/tvForget"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Account"
        android:id="@+id/tvRegisterLink"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forget Password?"
        android:id="@+id/tvForget"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:layout_gravity="left"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="239dp"
        android:layout_height="87dp"
        android:id="@+id/textView3"
        android:background="@drawable/powerblack"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRegisterLink"
        android:layout_marginTop="24dp"
        android:id="@+id/bEmail"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:background="@drawable/signup" />

</RelativeLayout>
